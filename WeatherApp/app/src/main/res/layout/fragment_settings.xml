<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/unit_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/unit_settings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="@string/unit_settings_label"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Unit"/>

        <TextView
            android:id="@+id/unit_settings_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:text="TextView"
            android:textSize="14sp"
            android:textStyle="italic"/>

        <View
            style="@style/Divider"
            android:layout_margin="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/refresh_delay_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/unit_settings"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/refresh_delay_settings_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:text="@string/refresh_delay_settings_label"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Refreh Delay"/>

        <TextView
            android:id="@+id/refresh_delay_settings_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:text="TextView"
            android:textSize="14sp"/>

        <View
            style="@style/Divider"
            android:layout_margin="4dp"/>

    </LinearLayout>

</RelativeLayout>
