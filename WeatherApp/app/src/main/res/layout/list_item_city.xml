<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/list_item_city_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/list_item_city_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/list_item_city_mark"
        android:padding="4dp"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Lodz"/>

    <TextView
        android:id="@+id/list_item_city_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/list_item_city_name"
        android:layout_toStartOf="@id/list_item_city_mark"
        android:paddingEnd="6dp"
        android:paddingStart="6dp"
        android:textStyle="italic"
        tools:text="19.455 E 59.2342 N"/>
</RelativeLayout>