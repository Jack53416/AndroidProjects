<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             tools:context="com.example.jacek.astroweather.WeatherFragment"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingLeft="5dp"
             android:paddingRight="5dp"
             android:stretchColumns="0">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/textView_moonTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="@string/moonFragmentTitle"
            android:textAlignment="gravity"
            android:textColor="@color/moonDark"
            android:textSize="@dimen/titleTextSize"
            android:textStyle="bold"/>

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_moon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.1"
            android:contentDescription="@string/moonFragmentTitle"
            android:padding="10dp"
            app:srcCompat="@drawable/moon"/>

        <ImageView
            android:id="@+id/img_moonrise"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:contentDescription="@string/moonriseTitle"
            android:padding="10dp"
            app:srcCompat="@drawable/moonrise"/>

        <ImageView
            android:id="@+id/img_moonset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:contentDescription="@string/moonsetTitle"
            android:padding="10dp"
            app:srcCompat="@drawable/moonset"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/moonPhase_caption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/moonPhaseTitle"
                    android:textAlignment="center"
                    android:textColor="@color/moonSilver"
                    android:textSize="@dimen/defaultTextSize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/moonPhase_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/defaultTextSize"
                    tools:text="65%"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/moonAge_caption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/moonAgeTitle"
                    android:textAlignment="center"
                    android:textColor="@color/moonSilver"
                    android:textSize="@dimen/defaultTextSize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/moonAge_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/defaultTextSize"
                    tools:text="26 days"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/moonrise_caption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:padding="10dp"
                    android:layout_weight="1"
                    android:textSize="@dimen/defaultTextSize"
                    android:text="@string/moonriseTitle"
                    android:textAlignment="center"
                    android:textColor="@color/moonSilver"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/moonrise_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/defaultTextSize"
                    tools:text="16:38"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fullmoon_caption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/fullmoonTitle"
                    android:textAlignment="center"
                    android:textColor="@color/moonSilver"
                    android:textSize="@dimen/defaultTextSize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/fullmoon_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/defaultTextSize"
                    tools:text="25.11.2017"/>
            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/moonset_caption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/moonsetTitle"
                    android:textAlignment="center"
                    android:textColor="@color/moonSilver"
                    android:textSize="@dimen/defaultTextSize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/moonset_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/defaultTextSize"
                    tools:text="12:45"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/newmoon_caption"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="@string/newMoonTitle"
                    android:textAlignment="center"
                    android:textColor="@color/moonSilver"
                    android:textSize="@dimen/defaultTextSize"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/newmoon_value"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/defaultTextSize"
                    tools:text="26.11.2017"/>
            </LinearLayout>


        </LinearLayout>

    </TableRow>

</TableLayout>